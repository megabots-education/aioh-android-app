<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_aioh_address"
        android:inputType="textCapWords"
        android:key="@string/pref_aioh_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_aioh_address" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_aioh_service_name"
        android:inputType="textCapWords"
        android:key="@string/pref_aioh_service_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_aioh_service_name" />

</PreferenceScreen>
